{
  "name": "x402-nextjs",
  "version": "0.1.0",
  "description": "Zero-config x402 payment facilitator for Next.js applications",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./facilitator": {
      "import": "./dist/facilitator.mjs",
      "require": "./dist/facilitator.js",
      "types": "./dist/facilitator.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/facilitator.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts src/facilitator.ts --format cjs,esm --dts --watch",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "x402",
    "payment",
    "facilitator",
    "nextjs",
    "blockchain",
    "crypto",
    "usdc",
    "micropayments"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "next": ">=14.0.0",
    "react": ">=18.0.0",
    "x402": ">=0.7.0"
  },
  "dependencies": {
    "viem": "^2.21.26",
    "x402-next": "^0.7.3"
  },
  "devDependencies": {
    "@types/node": "^20",
    "tsup": "^8.0.0",
    "typescript": "^5"
  }
}